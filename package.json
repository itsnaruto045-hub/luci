
{
  "name": "luci-ai",
  "private": true,
  "version": "1.0.0",
  "description": "Luci AI - Your Virtual Companion by % SDF >.. | S4DAF",
  "author": "% SDF >.. | S4DAF",
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@google/genai": "^1.41.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.0.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.s4daf.luci",
    "productName": "Luci AI",
    "directories": {
      "output": "dist_desktop"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "category": "Chat"
    }
  }
}
